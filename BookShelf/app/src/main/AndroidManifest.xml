<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.renandias.bookshelf">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <!-- Permision by user to use alarms -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyBooks" />
        <activity android:name=".AddBook" />
        <activity
            android:name=".MyReminders"
            android:label="@string/title_activity_my_reminders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddReminder" />

        <receiver android:name=".AlertReceiver" />

    </application>

</manifest>