<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.renandias.bookshelf.AddReminder">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_name"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/save_reminder"
        app:backgroundTint="?attr/actionModeSplitBackground" />

    <Button
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_date"
        android:layout_alignStart="@+id/show_date"
        android:layout_marginTop="38dp"
        android:id="@+id/show_time" />

    <Button
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/show_date"
        android:layout_below="@+id/book_name"
        android:layout_toStartOf="@+id/save_reminder" />

    <TextView
        android:text="12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_time"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/show_time"
        android:layout_alignBottom="@+id/show_time"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/show_time" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_date"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/show_date"
        android:layout_alignBottom="@+id/show_date"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/show_date" />

</RelativeLayout>
